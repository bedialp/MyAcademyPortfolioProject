@model List<MyPortfolio.Models.TblContacts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<br />
<h2>İletişim Sayfası</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İsim Soyisim</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>Email</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>

            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<a href="/Contact/AddContact" class="btn btn-outline-primary">Yeni İletişim Bilgisi Ekle</a>