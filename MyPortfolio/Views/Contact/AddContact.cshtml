@model MyPortfolio.Models.TblContacts
@{
    ViewBag.Title = "AddContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<h2>Yeni İletişim Bilgisi Ekleme Sayfası</h2>

<form method="post">
    <input type="hidden" name="ContactId" />
    <label>İsim Soyisim</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br />
    <label>Adres</label>
    <input type="text" name="Address" class="form-control" />
    <br />
    <label>Telefon </label>
    <input type="text" name="Phone" class="form-control" />
    <br />
    <label>Email</label>
    <input type="text" name="Email" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Kaydet</button>

</form>